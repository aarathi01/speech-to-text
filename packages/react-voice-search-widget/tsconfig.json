{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES5",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "declaration": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example", "**/*.test.tsx"]
}
